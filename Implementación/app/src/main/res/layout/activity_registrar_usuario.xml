<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarUsuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0D0D0D"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtCrearCuenta"
                android:textSize="50dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crea tu cuenta" />

            <EditText
                android:id="@+id/txtNombreCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_dark_background"
                android:hint="Nombre completo"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Correo electronico"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Seleccione su fecha de nacimiento"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="20dp"
                android:clickable="false"
                android:focusable="false"/>

            <EditText
                android:id="@+id/txtNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_dark_background"
                android:hint="Elige un nombre de usuario"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtContraseñaUno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_dark_background"
                android:hint="Contraseña"
                android:textSize="20dp"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/txtContraseñaDos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_dark_background"
                android:hint="Repita su contraseña"
                android:textSize="20dp"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_dark_background"
                android:hint="Añade una descripción"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFinalizarRegistro"
                android:background="#00749E"
                android:textColor="@color/white"
                android:layout_margin="40dp"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarme"/>


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>