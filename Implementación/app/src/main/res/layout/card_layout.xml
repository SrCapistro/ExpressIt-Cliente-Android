<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entradas_vista"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#252525"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtUsuarioPublicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="nombre_usuario"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBorrarEntrada"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="#A60202"
            android:text="Borrar"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFechaEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUsuarioPublicacion"
            android:layout_alignParentLeft="true"
            android:text="fecha_entrada"
            android:textColor="#AFAFAF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFechaEntrada"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="texto_entrada"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtHashtagsEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEntrada"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageEntrada"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHashtagsEntrada"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageEntrada"
            android:background="#DCDCDC"
            android:text="Me gusta"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtContadorMeGusta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageEntrada"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/btnLike"
            android:text="contador_megusta"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>