<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entradas_vista"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#171717"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3A3A3A"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nombre_usuario"
            android:textColor="@color/white"
            android:id="@+id/txtUsuarioPublicacion"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/txtFechaEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUsuarioPublicacion"
            android:text="fecha_entrada"
            android:textSize="15dp"
            android:textColor="#AFAFAF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="texto_entrada"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/txtFechaEntrada"/>

        <Button
            android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEntrada"
            android:layout_marginTop="40dp"
            android:text="Me gusta"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtContadorMeGusta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contador_megusta"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/btnLike"
            android:paddingTop="50dp"
            android:paddingLeft="20dp"
            android:layout_below="@+id/txtEntrada"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>